<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Palo -->
    <item
        android:top="4dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp"
        android:width="4.5dp"
        android:height="50dp"
        android:gravity="center">
        <shape android:shape="rectangle"
            >
            <stroke
                android:width="1dp"
                android:color="#000000"/>
            <solid android:color="#000000" />
            <corners android:radius="0.5dp"/>
        </shape>
    </item>

    <!-- Post -->
    <item
        android:top="4dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp"
        android:width="20dp"
        android:height="40dp"
        android:gravity="center_horizontal">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <solid android:color="#9A1616" />
            <corners android:radius="3dp" />
        </shape>
    </item>


</layer-list>